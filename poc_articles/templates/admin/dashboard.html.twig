{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Tableau de bord{% endblock %}

{% block content_header %}
    <h1 class="title">
        <i class="fas fa-tachometer-alt"></i> Tableau de bord
    </h1>
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-lg-3 col-md-6">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body text-center">
                    <i class="fas fa-tags fa-3x mb-2"></i>
                    <h2>{{ nbCategories }}</h2>
                    <p class="card-text">Catégories</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card text-white bg-success mb-3">
                <div class="card-body text-center">
                    <i class="fas fa-newspaper fa-3x mb-2"></i>
                    <h2>{{ nbArticles }}</h2>
                    <p class="card-text">Articles</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card text-white bg-info mb-3">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-3x mb-2"></i>
                    <h2>{{ nbArticlesPublies }}</h2>
                    <p class="card-text">Articles publiés</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x mb-2"></i>
                    <h2>{{ nbUtilisateurs }}</h2>
                    <p class="card-text">Utilisateurs</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-info-circle"></i> Bienvenue
                    </h5>
                    <p class="card-text">
                        Bienvenue sur le tableau de bord de l'application
                        <strong>POC Articles</strong>.
                        Utilisez le menu de gauche pour gérer les catégories,
                        les articles et les utilisateurs.
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}